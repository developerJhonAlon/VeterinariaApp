@model MvcNetFramework2.Models.Mascota
@{
    ViewBag.Title = "Nuevo";
}

<h2>Nueva Mascota</h2>
<hr />

<!-- Los controles con raizon -->
<form action="@Url.Action("Nuevo","Mascota")" method="post">
    <div class="form-group">
        <label>Id</label>
        <!-- Normalmente las cajas se pintan con Input type=text Pero usaremos Raizon este debe estar asociado a model si no tenemos
            model no funcionara, como vemos: x.Id es un model, atributos html-->
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group">
        <label>Raza</label>
        @Html.TextBoxFor(x => x.Raza, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group">
        <label>Edad</label>
        @Html.TextBoxFor(x => x.Edad, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group">
        <label>Dueño</label>
        @Html.TextBoxFor(x => x.NombreDueno, new { @class = "form-control", @required = "required" })
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Guardar" />
        <a href="@Url.Action("Index","Mascota")" class="btn btn-danger">Regresar</a>
    </div>
</form>
